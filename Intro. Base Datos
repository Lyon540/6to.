where Curso=1 or Curso=2 and Nivel <>'Bachillerato'
/*ejercicio 26*/
Select*from Alumnos
where Localidad='Monterrey' and Faltas>=10 and Nivel<>'Bachillerato'
/*ejercicio 27*/
Update Alumnos
Set Apellido= 'Rodriguez Rubio'
where Nombre='Raquel'
/*ejercicio 28*/
